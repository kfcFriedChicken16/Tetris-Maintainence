<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.MenuController" xmlns:fx="http://javafx.com/fxml" styleClass="menu-background">
    
    <!-- Video Background -->
    <MediaView fx:id="backgroundVideo" fitWidth="800" fitHeight="600" preserveRatio="false"/>
    
    <!-- Dark Overlay (40% darker as requested) -->
    <Region styleClass="background-overlay"/>
    
    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="30" maxWidth="400">
        
        <!-- Title -->
        <Label text="TETRIS" styleClass="game-title">
            <font>
                <Font name="Arial Bold" size="72"/>
            </font>
            <effect>
                <DropShadow color="#000000" offsetX="3" offsetY="3" radius="5"/>
            </effect>
        </Label>
        
        <!-- Subtitle -->
        <Label text="Classic Block Puzzle Game" styleClass="game-subtitle">
            <font>
                <Font name="Arial" size="18"/>
            </font>
        </Label>
        
        <!-- Menu Buttons -->
        <VBox alignment="CENTER" spacing="15" maxWidth="250">
            
            <Button fx:id="singlePlayerBtn" text="Single Player" onAction="#startSinglePlayer" styleClass="menu-button">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
                <effect>
                    <Glow level="0.3"/>
                </effect>
            </Button>
            
            <Button fx:id="multiplayerBtn" text="Local Multiplayer" onAction="#startMultiplayer" styleClass="menu-button">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
                <effect>
                    <Glow level="0.3"/>
                </effect>
            </Button>
            
            <Button fx:id="settingsBtn" text="Settings" onAction="#openSettings" styleClass="menu-button">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
                <effect>
                    <Glow level="0.3"/>
                </effect>
            </Button>
            
            <Button fx:id="highScoresBtn" text="High Scores" onAction="#showHighScores" styleClass="menu-button">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
                <effect>
                    <Glow level="0.3"/>
                </effect>
            </Button>
            
            <Button fx:id="exitBtn" text="Exit Game" onAction="#exitGame" styleClass="menu-button-exit">
                <font>
                    <Font name="Arial Bold" size="16"/>
                </font>
            </Button>
            
        </VBox>
        
        <!-- Version Info -->
        <Label text="Version 2.0 - Enhanced Edition" styleClass="version-info">
            <font>
                <Font name="Arial" size="12"/>
            </font>
        </Label>
        
    </VBox>
    
    <!-- Stylesheets -->
    <stylesheets>
        <URL value="@menuStyle.css"/>
    </stylesheets>
    
</StackPane>
